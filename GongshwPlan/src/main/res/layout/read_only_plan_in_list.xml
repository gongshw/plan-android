<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:paddingTop="12dp" android:paddingBottom="12dp" android:paddingLeft="25dp"
		android:paddingRight="25dp">

	<ImageView
			android:layout_width="10dp"
			android:background="@drawable/color_tag"
			android:layout_height="32dp"
			android:contentDescription="@string/circle"
			android:id="@+id/color_tag" android:padding="0dp"/>
	<TextView
			android:layout_width="wrap_content"
			android:layout_height="32dp"
			tools:text="今天的计划"
			android:id="@+id/plan_text_view"
			android:textSize="24sp" android:padding="0dp" android:gravity="center_vertical"/>

	<TextView android:layout_width="0dp" android:layout_height="0dp"/>

</LinearLayout>